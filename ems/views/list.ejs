<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body class="flex flex-col min-h-screen">
    <%- include('navbar') %>
    <main class="flex-grow mb-20">
      <h1 class="text-5xl md:text-7xl font-bold text-center">View Employees</h1>
      <br />
      <p class="text-2xl md:text-3xl font-light mb-5 md:mb-10 text-center">
        All current employees listed below.
      </p>
      <div class="text-center"">
        <a href="/new"
          ><button
            class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
          >
            Add New
          </button></a
        >
      </div>
      <br />
      <div class="flex flex-col w-1/2 mx-auto h-full p-4 w-full md:w-3/5">
        <div class="rounded overflow-hidden border">
          <% if(employees.length) {%>
          <table class="w-full">
            <thead>
              <tr class="bg-gray-200">
                <th class="p-1 sm:p-4 text-black-700 text-left">First Name</th>
                <th class="p-1 sm:p-4 text-black-700 text-left">Last Name</th>
                <th class="p-1 sm:p-4 text-black-700 text-left">Position</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% employees.forEach(function (entry) {%>
              <tr class="border py-1 hover:bg-gray-100">
                <td class="p-1 sm:p-4"><%= entry.firstName %></td>
                <td class="p-1 sm:p-4"><%= entry.lastName %></td>
                <td class="p-1 sm:p-4"><%= entry.position %></td>
                <td class="px-4">
                  <div
                    class="flex flex-col shadow-lg border-solid border-4 border-light-blue-500 bg-gray-200 items-center items-justify-center rounded-full w-6 sm:w-8 h-6 sm:h-8"
                  >
                    <a
                      href="/view/<%= entry.lastName %>"
                      class="text-green-700 hover:text-green-500"
                    >
                      <svg
                        class="w-full"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </a>
                  </div>
                </td>
              </tr>
            </tbody>
            <% }) %>
          </table>
          <%} else { %> No entries! <a href="/new">Add one!</a>
          <% } %>
        </div>
      </div>
    </main>
  </body>
  <%- include('footer') %> <%- include('scripts') %>
</html>
