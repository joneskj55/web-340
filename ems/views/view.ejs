    <div class="text-center"">
      <h1 class="text-5xl md:text-7xl font-bold text-center">Employee Details</h1>
      <br />
      <h2 class="text-3xl font-light mb-10 text-center">
        <%= employee[0].lastName %>
      </h2>

      <div class="mb-2">
        <label for="firstName"><b>First Name:</b></label>
        <input
          type="text"
          class="border py-1"
