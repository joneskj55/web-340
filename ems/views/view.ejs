        <label for="firstName"><b>Last Name:</b></label>
        <input
          type="text"
          class="border py-1"
          id="lastName"
          readonly
          value="<%= employee[0].lastName %>"
        />
      </div>

      <div>
        <label for="position"><b>Position:</b></label>
        <input
          type="text"
          class="border py-1"
          id="position"
          readonly
          value="<%= employee[0].position %>"
        />
      </div>



      <br /><br />
      <a href="/list"
        ><button
          class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-80"
        >
